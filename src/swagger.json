{
  "openapi": "3.0.0",
  "info": {
    "title": "API Controle de Estoque",
    "description": "Esta API tem como objetivo simular o controle de estoque de uma pequena loja.",
    "contact": {
      "email": "rafaap2003@gmail.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:5000/",
      "description": "API DEV"
    }
  ],
  "paths": {
    "/users": {
      "post": {
        "summary": "Cadastro de usuários",
        "description": "Esta rota será responsável por cadastrar usuários",
        "tags": [
          "Users"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schema/User"
              },
              "examples": {
                "user": {
                  "value": {
                    "name": "John Doe",
                    "email": "johndoe@example.com",
                    "password": "123456",
                    "admin": true
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Campo preenchido inválido."
          },
          "401": {
            "description": "Usuário já existe"
          },
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schema/User"
                }
              }
            }
          }
        }
      }
    },
    "/users/getuser": {
      "post": {
        "summary": "Busca de um usuário",
        "description": "Esta rota será responsável por buscar um usuário pelo seu email",
        "tags": [
          "Users"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "User": {
                  "type": "object",
                  "properties": {
                    "email": {
                      "type": "string"
                    }
                  }
                }
              },
              "examples": {
                "user": {
                  "value": {
                    "email": "johndoe@example.com"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "404": {
            "description": "Usuário não econtrado"
          },
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                    "properties": {
                      "name": {
                        "type": "string",
                        "description": "Nome do usuário"
                      },
                      "email": {
                        "type": "string",
                        "description": "Email do usuário"
                      }
                    }
                }
              }
            }
          }
        }
      },
      "components": {
        "schema": {
          "User": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "email": {
                "type": "string"
              },
              "password": {
                "type": "string"
              },
              "admin": {
                "type": "boolean"
              }
            }
          }
        }
      }
    }
  }
}
