{
  "openapi": "3.0.0",
  "info": {
    "title": "API Controle de Estoque",
    "description": "Esta API tem como objetivo simular o controle de estoque de uma pequena loja.",
    "contact": {
      "email": "rafaap2003@gmail.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:5000/",
      "description": "API DEV"
    }
  ],
  "paths": {
    "/user": {
      "post": {
        "summary": "Cadastro de usuários",
        "description": "Esta rota será responsável por cadastrar usuários",
        "tags": [
          "Users"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schema/User"
              },
              "examples": {
                "user": {
                  "value": {
                    "name": "John Doe",
                    "email": "johndoe@example.com",
                    "password": "123456",
                    "admin": true
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Campo preenchido inválido."
          },
          "401": {
            "description": "Usuário já existe"
          },
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schema/User"
                }
              }
            }
          }
        }
      }
    },
    "/user/getuser": {
      "post": {
        "summary": "Busca de um usuário",
        "description": "Esta rota será responsável por buscar um usuário pelo seu email",
        "tags": [
          "Users"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "User": {
                  "type": "object",
                  "properties": {
                    "email": {
                      "type": "string"
                    }
                  }
                }
              },
              "examples": {
                "user": {
                  "value": {
                    "email": "johndoe@example.com"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "404": {
            "description": "Usuário não econtrado"
          },
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "description": "Nome do usuário"
                    },
                    "email": {
                      "type": "string",
                      "description": "Email do usuário"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user/login": {
      "post": {
        "summary": "Faz o login de um usuário",
        "description": "Esta rota será responsável por faze o login de um usuário pelo seu email e senha",
        "tags": [
          "Users"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "User": {
                  "type": "object",
                  "properties": {
                    "email": {
                      "type": "string"
                    },
                    "password": {
                      "type": "string"
                    }
                  }
                }
              },
              "examples": {
                "user": {
                  "value": {
                    "email": "johndoe@example.com",
                    "password": "123456"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Campo senha ou email não preenchido."
          },
          "404": {
            "description": "Email ou senha incorreto."
          },
          "200": {
            "description": "Retorna uma mensagem para o usuário e o TOKEN no cabeçalho authorization.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "type": "string",
                      "description": "Mensagem de que o usuario foi logado"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/product/all": {
      "get": {
        "summary": "Retorna todos os produtos",
        "description": "Retorna um array com todos os produtos",
        "tags": [
          "Products"
        ],
        "responses": {
          "404": {
            "description": "Null."
          },
          "200": {
            "description": "Retorna um array com todos os produtos do banco de dados.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "description": "Nome do produto"
                    },
                    "price": {
                      "type": "number",
                      "description": "Preço unitário do produto"
                    },
                    "quantity": {
                      "type": "number",
                      "description": "Quantidade de produtos disponíveis."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/product": {
      "post": {
        "summary": "Retorna todos os produtos",
        "description": "Retorna um array com todos os produtos",
        "tags": [
          "Products"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody":{
          "content": {
            "application/json": {
              "schema": {
                "Product": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "price": {
                      "type": "number"
                    },
                    "quantity": {
                      "type": "number"
                    }
                  }
                }
              },
              "examples": {
                "Product": {
                  "value": {
                    "name": "Garrafa",
                    "price": 23.00,
                    "quantity": 15
                  }
                }
              }
            }
          }
        },
        "responses":{
          "400": {
            "description": "Produto já existe."
          },
          "500": {
            "description": "Erro ao criar o produto."
          },
          "200": {
            "description": "Retorna o produto criado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "price": {
                      "type": "number"
                    },
                    "quantity": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/product/{name}":{
      "get":{
        "summary": "Retorna um produto.",
        "description": "Retorna as informações do produto buscado pelos parâmetros.",
        "tags": [
          "Products"
        ],
        "parameters":[
          {
            "name": "name",
            "in": "query",
            "description": "Nome do produto desejado",
            "required": true
          }
        ],
        "responses":{
          "404": {
            "description": "Produto não encontrado."
          },
          "200": {
            "description": "Retorna o produto buscado.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "price": {
                      "type": "number"
                    },
                    "quantity": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "put":{
        "summary": "Retorna o produto atualizado",
        "description": "Retorna um objeto com o produto atualizado",
        "tags": [
          "Products"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters":[
          {
            "name": "name",
            "in": "query",
            "description": "Nome do produto desejado",
            "required": true
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "Product": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "price": {
                      "type": "number"
                    },
                    "quantity": {
                      "type": "number"
                    }
                  }
                }
              },
              "examples": {
                "Product": {
                  "value": {
                    "name": "New Name",
                    "price": 12,
                    "quantity": 7
                  }
                }
              }
            }
          }
        },
        "responses": {
          "404": {
            "description": "Produto não encontrado."
          },
          "200": {
            "description": "Retorna uma mensagem ao usuário, avisando que o produto foi atualizado.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "securitySchemes": {
    "bearerAuth": {
      "type": "http",
      "scheme": "bearer",
      "bearerFormat": "JWT"
    }
  }
}

